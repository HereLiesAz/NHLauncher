<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/searchIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />

        <ImageButton
            android:id="@+id/toolBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:maxLength="20"
            android:id="@+id/search_edit_text"
            android:paddingStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/searchIcon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/search_hint"
            android:visibility="gone"
            tools:ignore="RtlSymmetry" />

        <ImageButton
            android:layout_centerHorizontal="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/showCategories"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
        />



        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:id="@+id/categories_layout">

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/categories"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_above="@id/goBackButton"
                    android:id="@+id/recyclerViewCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dialog_title"
                    android:nestedScrollingEnabled="true">

                </androidx.recyclerview.widget.RecyclerView>

                <Button
                    android:id="@+id/goBackButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/close" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/imageViewHeader"
            android:layout_width="match_parent"
            android:layout_below="@id/searchIcon"
            android:layout_height="wrap_content">
<!--            <Spinner-->
<!--                android:id="@+id/categoriesSpinner"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@drawable/spinner_bg"-->
<!--                android:padding="10dp"-->
<!--                tools:ignore="DuplicateSpeakableTextCheck" />-->

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/imageViewFooter"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/imageViewFooter"
            android:layout_below="@+id/imageViewHeader"
            android:nestedScrollingEnabled="true"
            android:orientation="vertical"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/messagebox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/imageViewFooter"
            android:layout_below="@+id/imageViewHeader"
            android:gravity="top|center_horizontal"
            android:paddingHorizontal="25dp"
            android:paddingVertical="25dp"
            android:textSize="18sp"
            android:textStyle="bold" />

</RelativeLayout>
