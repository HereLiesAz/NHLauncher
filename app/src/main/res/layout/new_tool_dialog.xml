<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_theme_dialog_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_button"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/textview1"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="@string/button_name"
        android:inputType="textNoSuggestions"
        android:maxLength="25" />

    <EditText
        android:id="@+id/textview2"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="@string/button_description"
        android:inputType="textNoSuggestions"
        android:maxLength="100" />

    <EditText
        android:id="@+id/textview3"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="@string/button_cmd"
        android:inputType="textNoSuggestions"
        android:maxLength="1000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_secondary30"
            android:text="@string/close"
            android:textColor="@color/material_dynamic_secondary80" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_secondary30"
            android:text="@string/add"
            android:textColor="@color/material_dynamic_secondary80" />

    </LinearLayout>

</LinearLayout>
