<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/custom_theme_manager"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/theme_spinner"
        android:layout_width="280dp"
        android:layout_height="55dp"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Spinner
        android:id="@+id/font_spinner"
        android:layout_width="280dp"
        android:layout_height="55dp" />

    <CheckBox
        android:id="@+id/animate_buttons_chck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/animate_buttons" />

    <CheckBox
        android:id="@+id/splash_screen_chck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/enable_splash_screen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/close"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>

</LinearLayout>
